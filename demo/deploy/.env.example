# Arbitration Detection System Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_DB=arbitration_db
POSTGRES_USER=arbitration_user
POSTGRES_PASSWORD=change_me_in_production
DATABASE_URL=postgresql://arbitration_user:arbitration_pass@postgres:5432/arbitration_db

# =============================================================================
# Redis Configuration  
# =============================================================================
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=change_me_in_production

# =============================================================================
# Vector Database (Chroma)
# =============================================================================
CHROMA_URL=http://chroma:8000
CHROMA_AUTH_TOKEN=change_me_in_production

# =============================================================================
# Search Engine (Elasticsearch)
# =============================================================================
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=change_me_in_production

# =============================================================================
# Message Queue (RabbitMQ)
# =============================================================================
RABBITMQ_URL=amqp://arbitration_user:arbitration_pass@rabbitmq:5672/
RABBITMQ_DEFAULT_USER=arbitration_user
RABBITMQ_DEFAULT_PASS=change_me_in_production

# =============================================================================
# Application Security
# =============================================================================
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-chars
JWT_SECRET_KEY=another-secret-key-for-jwt-tokens-change-in-production
ENCRYPTION_KEY=base64-encoded-32-byte-key-for-data-encryption

# =============================================================================
# API Keys and External Services
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here
HUGGINGFACE_TOKEN=hf_your-huggingface-token-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google Cloud Services
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_TRANSLATE_API_KEY=your-translate-api-key

# =============================================================================
# Blockchain Configuration
# =============================================================================
# Ethereum
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-infura-key
ETHEREUM_TESTNET_RPC_URL=https://goerli.infura.io/v3/your-infura-key
WEB3_PRIVATE_KEY=your-private-key-without-0x-prefix

# Polygon
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/your-infura-key
POLYGON_TESTNET_RPC_URL=https://polygon-mumbai.infura.io/v3/your-infura-key

# Solana
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_TESTNET_RPC_URL=https://api.testnet.solana.com

# =============================================================================
# Integration Services
# =============================================================================
# Salesforce
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret
SALESFORCE_USERNAME=your-salesforce-username
SALESFORCE_PASSWORD=your-salesforce-password
SALESFORCE_SECURITY_TOKEN=your-salesforce-security-token

# Microsoft Graph
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=your-microsoft-tenant-id

# DocuSign
DOCUSIGN_INTEGRATION_KEY=your-docusign-integration-key
DOCUSIGN_CLIENT_SECRET=your-docusign-client-secret
DOCUSIGN_USER_ID=your-docusign-user-id
DOCUSIGN_ACCOUNT_ID=your-docusign-account-id

# =============================================================================
# Mobile Push Notifications
# =============================================================================
FCM_SERVER_KEY=your-firebase-cloud-messaging-server-key
APNS_KEY_ID=your-apple-push-notification-key-id
APNS_TEAM_ID=your-apple-team-id
APNS_BUNDLE_ID=com.arbitrationdetector.mobile

# =============================================================================
# Application Configuration
# =============================================================================
DEBUG=false
LOG_LEVEL=info
NODE_ENV=production
WORKERS=4
MAX_WORKERS=8

# CORS Configuration
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Frontend URLs
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_GRAPHQL_URL=https://api.yourdomain.com/graphql
NEXT_PUBLIC_WS_URL=wss://api.yourdomain.com/ws

# =============================================================================
# Monitoring and Observability
# =============================================================================
PROMETHEUS_ENABLED=true
JAEGER_ENDPOINT=http://jaeger:14268
GRAFANA_ADMIN_PASSWORD=change_me_in_production

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn-here
SENTRY_ENVIRONMENT=production

# DataDog APM (optional)
DD_API_KEY=your-datadog-api-key
DD_APP_KEY=your-datadog-app-key
DD_SITE=datadoghq.com

# =============================================================================
# SSL/TLS Configuration
# =============================================================================
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/certs/key.pem
SSL_CA_PATH=/etc/ssl/certs/ca.pem

# =============================================================================
# Storage Configuration
# =============================================================================
# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Google Cloud Storage (alternative)
GCS_BUCKET_NAME=your-gcs-bucket-name

# Azure Blob Storage (alternative)  
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-account-key
AZURE_STORAGE_CONTAINER_NAME=your-container-name

# =============================================================================
# Email Configuration
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourdomain.com

# SendGrid (alternative)
SENDGRID_API_KEY=your-sendgrid-api-key

# =============================================================================
# Rate Limiting and Performance
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
CACHE_TTL_SECONDS=300
MAX_FILE_SIZE_MB=100
MAX_REQUEST_SIZE_MB=10

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_BLOCKCHAIN_FEATURES=true
ENABLE_AI_FEATURES=true
ENABLE_COLLABORATION_FEATURES=true
ENABLE_MOBILE_SYNC=true
ENABLE_ANALYTICS=true
ENABLE_FEDERATED_LEARNING=false

# =============================================================================
# Development and Testing
# =============================================================================
# Only set these in development/testing environments
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/test_db
PYTEST_WORKERS=4
LOAD_TEST_USERS=100
LOAD_TEST_DURATION=300