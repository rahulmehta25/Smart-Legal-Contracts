# Production Environment Configuration
# SECURITY WARNING: Never commit this file with real credentials to version control

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=production
NODE_ENV=production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=arbitration_prod
POSTGRES_USER=postgres
POSTGRES_PASSWORD=REPLACE_WITH_SECURE_PASSWORD
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Database connection pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=REPLACE_WITH_SECURE_REDIS_PASSWORD
REDIS_DB=0
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# Redis connection settings
REDIS_MAX_CONNECTIONS=200
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# =============================================================================
# APPLICATION SECRETS
# =============================================================================
JWT_SECRET=REPLACE_WITH_SECURE_JWT_SECRET
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

SESSION_SECRET=REPLACE_WITH_SECURE_SESSION_SECRET
ENCRYPTION_KEY=REPLACE_WITH_SECURE_ENCRYPTION_KEY

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================
OPENAI_API_KEY=REPLACE_WITH_OPENAI_API_KEY
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.3

# =============================================================================
# DOMAIN AND URL CONFIGURATION
# =============================================================================
DOMAIN_URL=arbitration-detector.com
FRONTEND_URL=https://arbitration-detector.com
BACKEND_URL=https://api.arbitration-detector.com
API_URL=https://api.arbitration-detector.com

CORS_ORIGINS=https://arbitration-detector.com,https://www.arbitration-detector.com
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_UPLOAD_SIZE=100MB
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,rtf
UPLOAD_DIRECTORY=/app/uploads
TEMP_DIRECTORY=/app/temp

PDF_PROCESSING_TIMEOUT=300
OCR_ENABLED=true
OCR_LANGUAGES=eng,fra,deu,spa,jpn,chi_sim

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log
LOG_ROTATION=daily
LOG_RETENTION=30

# Monitoring
GRAFANA_PASSWORD=REPLACE_WITH_SECURE_GRAFANA_PASSWORD

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000

SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker
WORKER_CONNECTIONS=1000
WORKER_TIMEOUT=120

MAX_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=5
REQUEST_TIMEOUT=30
REQUEST_MAX_SIZE=100MB

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_AI_ANALYSIS=true
FEATURE_DOCUMENT_COMPARISON=true
FEATURE_MULTILINGUAL_SUPPORT=true
FEATURE_COLLABORATION=true
FEATURE_BLOCKCHAIN_INTEGRATION=false
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_VOICE_COMMANDS=false

BETA_FEATURES_ENABLED=false

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
DEBUG=false
TESTING=false
PROFILING_ENABLED=false
DEVELOPMENT_MODE=false
AUTO_RELOAD=false
SWAGGER_UI_ENABLED=false

# =============================================================================
# COMPLIANCE & AUDITING
# =============================================================================
GDPR_COMPLIANCE=true
CCPA_COMPLIANCE=true
AUDIT_LOGGING_ENABLED=true
AUDIT_LOG_LEVEL=info
AUDIT_LOG_RETENTION=365

# =============================================================================
# LOCALIZATION
# =============================================================================
TIMEZONE=UTC
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,ja,zh