# Environment Configuration for Vercel Deployment (Vite)
# Copy this file to .env.local for local development
# Set these variables in Vercel dashboard for production

# =============================================================================
# REQUIRED ENVIRONMENT VARIABLES
# =============================================================================

# Backend API URL (REQUIRED)
# For production: Your deployed FastAPI backend URL
# For development: http://localhost:8001
VITE_BACKEND_URL=https://your-backend-api.com
VITE_API_BASE_URL=https://your-backend-api.com

# WebSocket URL (auto-generated if not provided)
# For production: wss://your-backend-api.com/ws
# For development: ws://localhost:8001/ws
VITE_WS_URL=wss://your-backend-api.com/ws

# Backend URL for server-side rewrites (used in vercel.json)
BACKEND_URL=https://your-backend-api.com
WS_URL=wss://your-backend-api.com/ws

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application metadata
VITE_APP_NAME="Arbitration Detector"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="AI-powered arbitration clause detection in legal documents"

# Environment settings
MODE=production
VITE_ENV=production

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable analytics tracking
VITE_ENABLE_ANALYTICS=true

# Enable debug mode (auto-enabled in development)
VITE_ENABLE_DEBUG=false

# Enable error reporting
VITE_ENABLE_ERROR_REPORTING=true

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API request timeout in milliseconds
VITE_API_TIMEOUT=30000

# Maximum file upload size in bytes (10MB default)
VITE_MAX_FILE_SIZE=10485760

# =============================================================================
# SECURITY
# =============================================================================

# Content Security Policy nonce (auto-generated if not provided)
CSP_NONCE=

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# Sentry error tracking
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics tracking ID
VITE_GA_TRACKING_ID=GA-XXXXX-X

# =============================================================================
# VERCEL SPECIFIC (Auto-populated by Vercel)
# =============================================================================

# These are automatically set by Vercel, no need to configure manually
# VERCEL=1
# VERCEL_URL=your-app.vercel.app
# VERCEL_ENV=production|preview|development
# VERCEL_GIT_COMMIT_SHA=abc123
# VERCEL_GIT_COMMIT_MESSAGE="feat: add feature"

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================

# Vite build optimization
VITE_BUILD_SOURCEMAP=true

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Local development overrides
# VITE_BACKEND_URL=http://localhost:8001
# VITE_API_BASE_URL=http://localhost:8001
# VITE_WS_URL=ws://localhost:8001/ws
# VITE_ENABLE_DEBUG=true