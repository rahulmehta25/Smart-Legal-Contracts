# Database configuration
DATABASE_URL=sqlite:///./arbitration.db

# Vector store configuration  
VECTOR_STORE_TYPE=memory

# Environment settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Server configuration
HOST=0.0.0.0
PORT=8000

# CORS origins for development and production
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173,http://localhost:5174

# Security settings
SECRET_KEY=development_secret_key_change_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis settings (optional for testing)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# File upload settings
MAX_FILE_SIZE=10485760
UPLOAD_DIRECTORY=./uploads
ALLOWED_FILE_TYPES=text/plain,application/pdf,text/markdown

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Production database settings (PostgreSQL)
# Uncomment and configure for production:
# DATABASE_URL=postgresql://username:password@localhost:5432/arbitration_prod
# DB_POOL_SIZE=10
# DB_MAX_OVERFLOW=20
# DB_POOL_TIMEOUT=30
# DB_POOL_RECYCLE=3600