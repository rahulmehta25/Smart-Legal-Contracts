# Application Configuration
APP_NAME="Arbitration RAG API"
APP_VERSION="1.0.0"
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=sqlite:///./arbitration_rag.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/arbitration_rag
# For MySQL: DATABASE_URL=mysql://user:password@localhost/arbitration_rag

# Vector Store Configuration
VECTOR_STORE_PATH=./chroma_db
VECTOR_COLLECTION_NAME=arbitration_docs
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Security Configuration
SECRET_KEY=your-very-secure-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# RAG Pipeline Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=100
MAX_RETRIEVAL_RESULTS=20
MIN_CONFIDENCE_THRESHOLD=0.4

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIRECTORY=./uploads

# Logging Configuration
LOG_LEVEL=INFO
# LOG_FILE=./logs/app.log

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Model Configuration
DEVICE=auto  # auto, cpu, or cuda
BATCH_SIZE=32