# Environment Configuration Example
# Copy this file to .env and configure for your environment

# Application Environment
ENVIRONMENT=production  # development, staging, production
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/arbitration_db
# For development: DATABASE_URL=sqlite:///./arbitration_rag.db

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
# Generate with: openssl rand -hex 32

# CORS Configuration
ALLOWED_ORIGINS=https://your-frontend-domain.vercel.app,https://your-custom-domain.com

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=/app/logs/app.log

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Model Configuration
MODEL_DEVICE=cpu  # cpu, cuda, auto
BATCH_SIZE=16

# Feature Flags
ENABLE_DOCS=false  # Set to true for development
ENABLE_METRICS=true

# File Upload
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIRECTORY=./uploads

# Vector Store
VECTOR_STORE_PATH=./chroma_db
VECTOR_COLLECTION_NAME=arbitration_docs
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Health Check
HEALTH_CHECK_TIMEOUT=30

# Database Pool Settings (for PostgreSQL)
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# External API Configuration (if needed)
# OPENAI_API_KEY=your-openai-api-key
# ANTHROPIC_API_KEY=your-anthropic-api-key