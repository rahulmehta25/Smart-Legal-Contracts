# Environment Configuration Template
# Copy this file to .env.production, .env.staging, etc. and fill in the actual values

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=production
NODE_ENV=production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=arbitration_prod
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Database connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_DB=0
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# Redis connection settings
REDIS_MAX_CONNECTIONS=100
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# =============================================================================
# APPLICATION SECRETS
# =============================================================================
# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Session secret
SESSION_SECRET=your_session_secret_here

# Encryption key for sensitive data
ENCRYPTION_KEY=your_encryption_key_here

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================
# OpenAI API Key for AI features
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.3

# Other AI service keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
COHERE_API_KEY=your_cohere_api_key_here

# =============================================================================
# CLOUD SERVICES
# =============================================================================
# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=arbitration-detector-uploads

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your_gcp_project_id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Azure Configuration
AZURE_STORAGE_ACCOUNT=your_storage_account
AZURE_STORAGE_KEY=your_storage_key
AZURE_CONTAINER_NAME=uploads

# =============================================================================
# DOMAIN AND URL CONFIGURATION
# =============================================================================
DOMAIN_URL=arbitration-detector.com
FRONTEND_URL=https://arbitration-detector.com
BACKEND_URL=https://api.arbitration-detector.com
API_URL=https://api.arbitration-detector.com

# CORS Configuration
CORS_ORIGINS=https://arbitration-detector.com,https://www.arbitration-detector.com
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_UPLOAD_SIZE=100MB
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,rtf
UPLOAD_DIRECTORY=/app/uploads
TEMP_DIRECTORY=/app/temp

# File processing settings
PDF_PROCESSING_TIMEOUT=300
OCR_ENABLED=true
OCR_LANGUAGES=eng,fra,deu,spa,jpn,chi_sim

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_TLS=true
SMTP_SSL=false

# Email settings
FROM_EMAIL=noreply@arbitration-detector.com
FROM_NAME=Arbitration Detector
SUPPORT_EMAIL=support@arbitration-detector.com

# Email templates
EMAIL_TEMPLATE_DIR=/app/templates/email

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
# Logging configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log
LOG_ROTATION=daily
LOG_RETENTION=30

# Sentry for error monitoring
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Application Insights (Azure)
APPINSIGHTS_INSTRUMENTATIONKEY=your_app_insights_key_here

# DataDog
DATADOG_API_KEY=your_datadog_api_key_here
DATADOG_APP_KEY=your_datadog_app_key_here

# =============================================================================
# PROMETHEUS MONITORING
# =============================================================================
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION=30d

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_PASSWORD=your_grafana_password_here
GRAFANA_PORT=3001

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Security headers
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
CONTENT_SECURITY_POLICY=default-src 'self'

# IP filtering
IP_WHITELIST_ENABLED=false
IP_WHITELIST=127.0.0.1,::1
IP_BLACKLIST_ENABLED=false

# Session security
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=true

# Cloud backup
BACKUP_CLOUD_ENABLED=true
BACKUP_S3_BUCKET=arbitration-detector-backups
BACKUP_S3_REGION=us-east-1

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Application cache
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_PREFIX=arbitration_detector

# CDN Configuration
CDN_ENABLED=false
CDN_URL=https://cdn.arbitration-detector.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Feature toggles
FEATURE_AI_ANALYSIS=true
FEATURE_DOCUMENT_COMPARISON=true
FEATURE_MULTILINGUAL_SUPPORT=true
FEATURE_COLLABORATION=true
FEATURE_BLOCKCHAIN_INTEGRATION=false
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_VOICE_COMMANDS=false
FEATURE_MOBILE_APP=false

# Beta features
BETA_FEATURES_ENABLED=false
BETA_USERS_ALLOWED=user1@example.com,user2@example.com

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Worker processes
WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker
WORKER_CONNECTIONS=1000
WORKER_TIMEOUT=120

# Connection limits
MAX_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=5

# Request limits
REQUEST_TIMEOUT=30
REQUEST_MAX_SIZE=100MB

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Debug settings (DO NOT USE IN PRODUCTION)
DEBUG=false
TESTING=false
PROFILING_ENABLED=false

# Development tools
DEVELOPMENT_MODE=false
AUTO_RELOAD=false
SWAGGER_UI_ENABLED=false

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
# Webhook endpoints for integrations
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here
TEAMS_WEBHOOK_URL=your_teams_webhook_url_here

# Webhook security
WEBHOOK_SECRET=your_webhook_secret_here

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================
# Legal databases
WESTLAW_API_KEY=your_westlaw_api_key_here
LEXIS_NEXIS_API_KEY=your_lexis_nexis_api_key_here

# Document management systems
SHAREPOINT_CLIENT_ID=your_sharepoint_client_id_here
SHAREPOINT_CLIENT_SECRET=your_sharepoint_client_secret_here

# CRM integrations
SALESFORCE_CLIENT_ID=your_salesforce_client_id_here
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret_here

# =============================================================================
# ANALYTICS & TRACKING
# =============================================================================
# Google Analytics
GA_TRACKING_ID=your_google_analytics_id_here
GA_MEASUREMENT_ID=your_ga4_measurement_id_here

# Application analytics
MIXPANEL_TOKEN=your_mixpanel_token_here
AMPLITUDE_API_KEY=your_amplitude_api_key_here

# =============================================================================
# COMPLIANCE & AUDITING
# =============================================================================
# Compliance settings
GDPR_COMPLIANCE=true
CCPA_COMPLIANCE=true
HIPAA_COMPLIANCE=false
SOX_COMPLIANCE=false

# Audit logging
AUDIT_LOGGING_ENABLED=true
AUDIT_LOG_LEVEL=info
AUDIT_LOG_RETENTION=365

# =============================================================================
# TIMEZONE & LOCALIZATION
# =============================================================================
TIMEZONE=UTC
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,ja,zh

# Date and time formats
DATE_FORMAT=YYYY-MM-DD
TIME_FORMAT=HH:mm:ss
DATETIME_FORMAT=YYYY-MM-DD HH:mm:ss